{
  "name": "onspringend2endtests",
  "version": "1.0.0",
  "description": "A suite of automated web app tests for the Onspring platform.",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:chrome": "npm run test -- --project chrome",
    "test:firefox": "npm run test -- --project firefox",
    "test:safari": "npm run test -- --project safari",
    "test:mobile": "npm run test -- --project android --project iOS",
    "test:ui": "npx playwright test --ui",
    "lint": "npx eslint",
    "lint:fix": "npm run lint -- --fix",
    "format:test": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "keywords": [
    "onspring",
    "automation",
    "testing",
    "playwright"
  ],
  "author": "stevan freeborn",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright/test": "^1.37.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.47.0",
    "eslint-plugin-playwright": "^0.15.3",
    "prettier": "^3.0.2"
  }
}