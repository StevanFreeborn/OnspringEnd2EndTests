{
  "name": "onspringend2endtests",
  "version": "1.0.0",
  "description": "A suite of automated web app tests for the Onspring platform.",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:pwservice": "npx playwright test --config=playwright.service.config.ts",
    "test:chrome": "npm run test -- --project chrome",
    "test:safari": "npm run test -- --project safari",
    "test:edge": "npm run test -- --project edge",
    "test:seq": "npm run test:chrome && npm run test:safari && npm run test:edge",
    "test:ui": "npx playwright test --ui",
    "lint": "npx eslint",
    "lint:fix": "npm run lint -- --fix",
    "format:test": "prettier . --check",
    "format:fix": "prettier . --write",
    "cleanup:results": "rimraf ./blob-report/ ./playwright-report/ ./test-results/"
  },
  "keywords": [
    "onspring",
    "automation",
    "testing",
    "playwright"
  ],
  "author": "stevan freeborn",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "eslint-plugin-playwright": "^0.17.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "zod": "^3.22.4"
  }
}
